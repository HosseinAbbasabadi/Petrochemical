@page
@model Petrochemical.Presentation.Web.Areas.Admin.Pages.Blog.ArticleCategory.IndexModel
@{
    const string pageName = "Article Category";
}

<div style="display: flex; justify-content: space-between; align-items: center">
    <h2>Basic Form Elements</h2>
    <a class="btn btn-success" asp-page="./Ops">New Article Category</a>
</div>
<br/>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary" data-collapsed="0">
            <div class="panel-heading">
                <div class="panel-title">
                    Search @pageName
                </div>
                <div class="panel-options">
                    <a
                        href="#" data-rel="collapse">
                        <i class="entypo-down-open"></i>
                    </a>
                </div>
            </div>
            <div class="panel-body">
                <form method="get" role="form" class="form-groups-bordered">
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label asp-for="SearchModel.Id" class="control-label sr-only">Id</label>
                            <input type="number" class="form-control" asp-for="SearchModel.Id" placeholder="Id" autocomplete="off">
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="SearchModel.Name" class="control-label sr-only">Name</label>
                            <input type="text" class="form-control" asp-for="SearchModel.Name" placeholder="Name" autocomplete="off">
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="SearchModel.Status" class="control-label sr-only">Status</label>
                            <select class="form-control" asp-for="SearchModel.Status">
                                <option value="0" selected="selected">All</option>
                                <option value="1">Active</option>
                                <option value="2">Inactive</option>
                            </select>
                        </div>
                    </div>
                    <p class="bs-example">
                        <button type="submit" class="btn btn-default">Search</button>
                        <a asp-page="./Index" class="btn btn-primary">Show All</a>
                    </p>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div class="panel panel-primary" data-collapsed="0">
            <div class="panel-heading">
                <div class="panel-title">
                    @pageName List
                </div>
                <div class="panel-options">
                    <a href="#sample-modal" data-toggle="modal"data-target="#sample-modal-dialog-1" class="bg">
                        <i class="entypo-cog"></i>
                    </a>
                    <a
                        href="#" data-rel="collapse">
                        <i class="entypo-down-open"></i>
                    </a>
                </div>
            </div>
            <div class="panel-body">

                <table class="table table-bordered datatable" id="table-1">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Status</th>
                        <th>Operations</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.List)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.ImagePath</td>
                            <td>@item.Name</td>
                            <td>
                                @if (item.IsRemoved)
                                {
                                    <span class="text-danger">Inactive</span>
                                }
                                else
                                {
                                    <span class="text-success">active</span>
                                }
                            </td>
                            <td>
                                <a asp-page="./Index" asp-page-handler="Edit" asp-route-id="@item.Id" class="btn btn-default btn-sm btn-icon icon-left">
                                    <i class="entypo-pencil"></i>
                                    Edit
                                </a>
                                @if (item.IsRemoved)
                                {
                                    <a href="#" class="btn btn-success btn-sm btn-icon icon-left">
                                        <i class="entypo-info"></i>
                                        Restore
                                    </a>
                                }
                                else
                                {
                                    <a href="#" class="btn btn-danger btn-sm btn-icon icon-left">
                                        <i class="entypo-cancel"></i>
                                        Remove
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                    </tbody>
                    <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Status</th>
                        <th>Operations</th>
                    </tr>
                    </tfoot>
                </table>

            </div>
        </div>
    </div>

</div>


@section Scripts
{
    <script type="text/javascript">
        jQuery(document).ready(function($) {
            const $table1 = jQuery('#table-1');
            // Initialize DataTable
            $table1.DataTable({
                "aLengthMenu": [
                    [10, 25, 50, -1],
                    [10, 25, 50, "All"]
                ],
                "bStateSave": true
            });
            // Initalize Select Dropdown after DataTables is created
            $table1.closest('.dataTables_wrapper').find('select').select2({
                minimumResultsForSearch: -1
            });
        });
    </script>
}